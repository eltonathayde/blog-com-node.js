<%- include ('../../partials/header.ejs') %> 
<%- include ('../../partials/navbar.ejs') %> 

<!-- formulario para incluir uma nova categoria -->
<div class="container">
        <div class="card">
            <div class="card-header">
                <h2>Edição de categoria</h2>
            </div>
            <div class="card-body">
                <form action="/categories/update " method="post">
                    <input class="form-control" type="text" name="title" placeholder="Defina o titulo da categoria " value="<%= categoria.title %>">
                    <input type="hidden" name="id" value="<%= categoria.id %>">  <br>
                    <button class=" btn-primary">Atualizar</button> 
                </form>
             </div>
        </div>
</div>